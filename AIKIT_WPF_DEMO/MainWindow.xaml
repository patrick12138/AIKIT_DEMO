<Window x:Class="AikitWpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="语音唤醒测试" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 中间状态显示区 -->
        <Border Grid.Row="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer>
                <TextBlock x:Name="TxtLog" TextWrapping="Wrap" Margin="5"/>
            </ScrollViewer>
        </Border>
        <!-- 底部按钮区 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button x:Name="BtnStartWakeup" Content="唤醒窗口" Width="100" Margin="5" Click="BtnStartWakeup_Click"/>
            <Button x:Name="BtnStopWakeup" Content="停止唤醒" Width="100" Margin="5" Click="BtnStopWakeup_Click"/>
            <Button x:Name="BtnRunFullTest" Content="命令词识别" Width="100" Margin="5" Click="BtnStartEsr_Click"/>
        </StackPanel>
    </Grid>
</Window>