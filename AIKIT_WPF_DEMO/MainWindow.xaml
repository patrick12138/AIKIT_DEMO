<Window x:Class="AikitWpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="语音唤醒测试" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部控制区 -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="AIKIT语音唤醒演示" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="应用ID:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtAppId" Text="80857b22" Width="200" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="API Key:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtApiKey" Text="f27d0261fb5fa1733b7e9a2190006aec" Width="200" Margin="5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="API Secret:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtApiSecret" Text="ZDkyM2RkZjcyYTZmM2VjMDM0MzVmZDJl" Width="200" Margin="5,0"/>
            </StackPanel>
        
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="唤醒阈值:" Width="80" VerticalAlignment="Center"/>
                <Slider x:Name="SliderThreshold" Minimum="0" Maximum="1000" Value="900" Width="180" Margin="5,0"/>
                <TextBlock Text="{Binding ElementName=SliderThreshold, Path=Value, StringFormat={}{0:F0}}" Width="40" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- 中间状态显示区 -->
        <Border Grid.Row="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer>
                <TextBlock x:Name="TxtLog" TextWrapping="Wrap" Margin="5"/>
            </ScrollViewer>
        </Border>
        <!-- 底部按钮区 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button x:Name="BtnRunFullTest" Content="语音唤醒测试" Width="100" Margin="5" Click="BtnRunFullTest_Click"/>
            <Button x:Name="BtnTestPopup" Content="测试弹窗" Width="100" Margin="5" Click="BtnTestPopup_Click"/>
        </StackPanel>
    </Grid>
</Window>